<h2>Meal Plan: <%= @meal_plan %></h2>

<h4>Meals</h4>

<ul class="meals">
  <% @meal_plan.meals.each do |meal| %>
    <li class="meal">
      <%= meal.date %> - <%= link_to meal.recipe, recipe_path(meal.recipe) %>
    </li>
  <% end %>
</ul>

<div class="form-group">
  <ul class="recipe-actions">
    <li>
      <%= link_to "Edit Meal Plan", edit_meal_plan_path(@meal_plan) %>
    </li>
    <li>
      <%= link_to "Delete", meal_plan_path(@meal_plan), data: { confirm: "Sure you want to delete this meal plan: #{@meal_plan}?", }, method: :delete %>
    </li>
  </ul>
</div>
