<%= render "shared/errors" %>

<%= form_with(model: @recipe) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :serves %>
    <%= f.text_field :serves, class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.text_field :level, class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.submit "Add Recipe", class: "btn btn-outline-secondary" %>
  </div>
<% end %>
  
